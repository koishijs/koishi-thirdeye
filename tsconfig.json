{
	"compilerOptions": {
		"outDir": "dist",
		"module": "commonjs",
		"target": "es2020",
		"esModuleInterop": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"declaration": true,
		"sourceMap": true,
		"skipLibCheck": true
	},
	"compileOnSave": true,
	"allowJs": true,
	"include": [
		"*.ts",
		"src/**/*.ts",
		"test/**/*.ts",
		"tests/**/*.ts"
	]
}
